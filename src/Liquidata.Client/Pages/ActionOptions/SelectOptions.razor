@layout MainLayout
@using Liquidata.Common.Extensions
@using MudBlazor
@inherits SelectOptionsViewModel

<MudStack>
    <MudTextField Label="Name" Clearable="true" AutoGrow="true" Variant="@Variant.Outlined"
                  @bind-Value="Name" />

    <MudTextField Style="word-break: break-all;" Label="XPath" Clearable="true"
                  AutoGrow="true" Variant="@Variant.Outlined"
                  @bind-Value="XPath" />

    <MudSlider Min="0" Max="5000" Step="250"
               @bind-Value="@ItemWaitMilliseconds">
        @(ItemWaitMilliseconds.BuildWaitTimeText()) after item
    </MudSlider>

    <MudSlider Min="0" Max="60000" Step="250"
               @bind-Value="@SelectionWaitMilliseconds">
        @(SelectionWaitMilliseconds.BuildWaitTimeText()) for selection
    </MudSlider>
</MudStack>