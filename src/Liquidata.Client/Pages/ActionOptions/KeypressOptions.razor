@layout MainLayout
@using Liquidata.Common.Extensions
@using MudBlazor
@inherits KeypressOptionsViewModel

<MudStack>
    <MudTextField Label="Key" Clearable="true" AutoGrow="true" Variant="@Variant.Outlined"
                  ReadOnly="true" Value="@(TypedAction.BuildKeypressText())"               
                  KeyDownPreventDefault="true"
                  OnKeyDown="@(args => UpdateKeypressedAsyncCommand(args))" />
    
    <MudSlider Min="0" Max="5000" Step="250"
               @bind-Value="@TypedAction.WaitMilliseconds">
        @(TypedAction.WaitMilliseconds.BuildWaitTimeText())
    </MudSlider>
</MudStack>