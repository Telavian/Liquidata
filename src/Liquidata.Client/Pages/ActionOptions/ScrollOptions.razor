@layout MainLayout
@using Liquidata.Common.Actions.Enums
@using Liquidata.Common.Extensions
@using MudBlazor
@inherits ScrollOptionsViewModel

<MudStack>
    <MudSelect Label="Direction" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter"
               MultiSelection="false" @bind-Value="ScrollType">
        @foreach (var type in Enum.GetValues<ScrollType>())
        {
            <MudSelectItem Value="@type">@(type.BuildFriendlyName())</MudSelectItem>
        }
    </MudSelect>

    <MudSlider Min="0" Max="5000" Step="250"
               @bind-Value="@WaitMilliseconds">
        @(WaitMilliseconds.BuildWaitTimeText()) after scroll
    </MudSlider>
</MudStack>