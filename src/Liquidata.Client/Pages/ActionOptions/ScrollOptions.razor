@layout MainLayout
@using Liquidata.Common.Actions.Enums
@using Liquidata.Common.Extensions
@using MudBlazor
@inherits ScrollOptionsViewModel

<MudStack>
    <MudSelect Label="Direction" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter"
               MultiSelection="false" @bind-Value="TypedAction.ScrollType">
        @foreach (var type in Enum.GetValues<ScrollType>())
        {
            <MudSelectItem Value="@type">@(type.BuildFriendlyName())</MudSelectItem>
        }
    </MudSelect>

    <MudSlider Min="0" Max="5000" Step="250"
               @bind-Value="@TypedAction.WaitMilliseconds">
        @(TypedAction.WaitMilliseconds.BuildWaitTimeText())
    </MudSlider>

    <MudStack Row="true">
        <MudNumericField Min="0" Format="N0" Label="Max count" Clearable="true" Immediate="true"
                         HelperText="@(MaxTimesCount == 0 ? "Unlimited" : $"Scroll {MaxTimesCount} times")"
                         @bind-Value="@MaxTimesCount" />
    </MudStack>
</MudStack>