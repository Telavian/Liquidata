@layout MainLayout
@using Liquidata.Common.Actions
@using MudBlazor
@inherits TemplateOptionsViewModel

<MudStack>
    <MudTextField Label="Name" Clearable="true" Variant="@Variant.Text"
                  Disabled="@(Action!.Name == Template.MainTemplateName)"
                  @bind-Value="@Name"  />
    <MudTextField Style="word-break: break-all;" Label="Url" 
                  Clearable="true" AutoGrow="true" Variant="@Variant.Text"
                  @bind-Value="@Url" />
</MudStack>