@layout MainLayout
@using MudBlazor
@inherits JumpOptionsViewModel

<MudStack>
    <MudSelect Label="Jump target" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter"
                MultiSelection="false" @bind-Value="JumpTarget">
        @foreach (var item in Parent!.SelectedTemplate?.FindAllJumpTargets() ?? [])
        {
            <MudSelectItem Value="@item">@item.Name</MudSelectItem>
        }
    </MudSelect>   

    <MudSlider Min="0" Max="5000" Step="250"
               @bind-Value="@TypedAction.WaitMilliseconds">
        Wait @(TypedAction.WaitMilliseconds) milliseconds
    </MudSlider>

    <MudStack Row="true">
        <MudNumericField Min="0" Format="N0" Label="Max count"
                         @bind-Value="@TypedAction.MaxTimesCount" />

        <MudSwitch Class="verticalCenter" Color="Color.Info"
                   @bind-Value="@TypedAction.IsMaxTimesTemplate">
            @(TypedAction.IsMaxTimesTemplate ? "Template" : "Global")
        </MudSwitch>
    </MudStack>
</MudStack>