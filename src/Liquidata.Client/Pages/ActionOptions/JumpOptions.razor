@layout MainLayout
@using Liquidata.Common.Extensions
@using MudBlazor
@inherits JumpOptionsViewModel

<MudStack>
    <MudSelect Label="Jump target" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter"
                MultiSelection="false" @bind-Value="JumpTarget">
        @foreach (var item in Parent!.SelectedTemplate?.FindAllJumpTargets() ?? [])
        {
            <MudSelectItem Value="@item">@item.Name</MudSelectItem>
        }
    </MudSelect>   

    <MudSlider Min="0" Max="5000" Step="250"
               @bind-Value="@TypedAction.WaitMilliseconds">
        @(TypedAction.WaitMilliseconds.BuildWaitTimeText())
    </MudSlider>

    <MudStack Row="true">
        <MudNumericField Min="0" Format="N0" Label="Max count" Clearable="true" Immediate="true"
                         HelperText="@(MaxTimesCount == 0 ? "Unlimited" : $"Jump {MaxTimesCount} times")"
                         @bind-Value="@MaxTimesCount" />
    </MudStack>
</MudStack>