@layout MainLayout
@using Liquidata.Common.Actions.Enums
@using Liquidata.Common.Extensions
@using MudBlazor
@inherits StoreOptionsViewModel

<MudStack>
    <MudTextField Label="Name" Clearable="true" AutoGrow="true" Variant="@Variant.Outlined"
                  @bind-Value="TypedAction.Name" />

    <MudSelect Label="Store type" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter"
               MultiSelection="false" @bind-Value="TypedAction.StoreType">
        @foreach (var type in Enum.GetValues<StoreType>())
        {
            <MudSelectItem Value="@type">@(type.BuildFriendlyName())</MudSelectItem>
        }
    </MudSelect>

    <MudSelect Label="Script action" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter"
               MultiSelection="false" @bind-Value="ScriptType">
        @foreach (var type in Enum.GetValues<ScriptType>())
        {
            <MudSelectItem Value="@type">@(type.BuildFriendlyName())</MudSelectItem>
        }
    </MudSelect>

    <MudTextField Style="word-break: break-all;" Label="Script" Clearable="true"
                  AutoGrow="true" Variant="@Variant.Outlined"
                  @bind-Value="TypedAction.Script" />

    <MudSelect Label="Field type" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter"
               MultiSelection="false" @bind-Value="TypedAction.FieldType">
        @foreach (var type in Enum.GetValues<Liquidata.Common.Actions.Enums.FieldType>())
        {
            <MudSelectItem Value="@type">@(type.BuildFriendlyName())</MudSelectItem>
        }
    </MudSelect>
</MudStack>