@layout MainLayout
@using MudBlazor
@inherits ProjectSettingsDialogViewModel

<MudDialog>
    <DialogContent>
        <MudStack Style="margin: 5px; min-width: 350px;">
            <MudTextField Label="Project Name" Clearable="true"
                          @bind-Value="@Name" Variant="@Variant.Text" />

            <MudTextField Style="word-break: break-all;" Label="Starting Url" Clearable="true" InputType="InputType.Url"
                          @bind-Value="@Url" Variant="@Variant.Text" />

            <MudNumericField Label="Concurrency" Clearable="true"
                             @bind-Value="@Concurrency" Variant="@Variant.Text" />
        </MudStack>
    </DialogContent>

    <DialogActions>
        <MudTooltip Text="Save settings" Delay="500" Color="Color.Primary">
            <MudButton Color="Color.Primary" Variant="Variant.Filled"                       
                       OnClick="@(() => SaveSettingsAsyncCommand())">
                Save
            </MudButton>
        </MudTooltip>        

        <MudTooltip Text="Cancel saving settings" Delay="500" Color="Color.Primary">
            <MudButton Color="Color.Error" Variant="Variant.Filled"                       
                       OnClick="@(() => CloseDialogAsyncCommand())">
                Cancel
            </MudButton>
        </MudTooltip>
    </DialogActions>
</MudDialog>