@layout MainLayout
@using MudBlazor
@inherits AddTemplateDialogViewModel

<MudDialog>
    <DialogContent>
        <MudStack Style="margin: 5px;">
            <h1>Add Template</h1>

            <MudTextField Label="Name" Variant="Variant.Outlined"
                          @bind-Value="TemplateName" />

            <MudTextField Label="Name" Variant="Variant.Outlined"
                          @bind-Value="TemplateUrl" />

        </MudStack>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled"
                   OnClick="@(() => AddTemplateAsyncCommand())">
            Add
        </MudButton>

        <MudButton Color="Color.Error" Variant="Variant.Filled"
                   OnClick="@(() => CloseDialogAsyncCommand())">
            Cancel
        </MudButton>
    </DialogActions>
</MudDialog>