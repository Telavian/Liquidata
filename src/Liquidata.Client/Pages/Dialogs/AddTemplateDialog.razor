@layout MainLayout
@using MudBlazor
@inherits AddTemplateDialogViewModel

<MudDialog>
    <DialogContent>
        <MudStack Style="margin: 5px; min-width: 350px;">
            <MudTextField Label="Name" Variant="Variant.Outlined"
                          @bind-Value="TemplateName" />

            <MudTextField Style="word-break: break-all;" Label="Url" Variant="Variant.Outlined" InputType="InputType.Url"
                          @bind-Value="TemplateUrl" />
        </MudStack>
    </DialogContent>

    <DialogActions>
        <MudTooltip Text="Add a new template" Delay="500">
            <MudButton Color="Color.Primary" Variant="Variant.Filled"                       
                       OnClick="@(() => AddTemplateAsyncCommand())">
                Add
            </MudButton>
        </MudTooltip>        

        <MudTooltip Text="Cancel adding template" Delay="500">
            <MudButton Color="Color.Error" Variant="Variant.Filled"                       
                       OnClick="@(() => CloseDialogAsyncCommand())">
                Cancel
            </MudButton>
        </MudTooltip>
    </DialogActions>
</MudDialog>