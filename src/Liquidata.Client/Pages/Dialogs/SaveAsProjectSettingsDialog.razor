@layout MainLayout
@using MudBlazor
@inherits SaveAsProjectSettingsDialogViewModel

<MudDialog>
    <DialogContent>
        <MudStack Style="margin: 5px; min-width: 350px;">
            <MudTextField Label="Project Name" Clearable="true"
                          @bind-Value="@Name" Variant="@Variant.Text" />
        </MudStack>
    </DialogContent>

    <DialogActions>
        <MudTooltip Text="New project name" Delay="500" Color="Color.Primary">
            <MudButton Color="Color.Primary" Variant="Variant.Filled"                       
                       OnClick="@(() => SaveAsyncCommand())">
                Save
            </MudButton>
        </MudTooltip>        

        <MudTooltip Text="Cancel adding template" Delay="500" Color="Color.Primary">
            <MudButton Color="Color.Error" Variant="Variant.Filled"                       
                       OnClick="@(() => CloseDialogAsyncCommand())">
                Cancel
            </MudButton>
        </MudTooltip>
    </DialogActions>
</MudDialog>