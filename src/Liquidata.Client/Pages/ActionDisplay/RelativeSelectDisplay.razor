@layout MainLayout
@using MudBlazor
@inherits RelativeSelectDisplayViewModel

<MudStack Style="width: 100%; height: 100%;" Row="true" Spacing="1">
    <div class="verticalCenter">
        Relative select <b>@(TypedAction.Name)</b>
    </div>

    <MudTooltip Text="Clear selection" Delay="500" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.TwoTone.BorderClear" Color="Color.Tertiary"
                       OnClick="@(() => Parent!.ClearSelectionAsyncCommand(Action!))" />
    </MudTooltip>
</MudStack>