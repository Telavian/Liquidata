@layout MainLayout
@using Liquidata.Common.Extensions
@using MudBlazor
@inherits TemplateDisplayViewModel

<MudStack Style="width: 100%; height: 100%;" Row="true">
    <div class="verticalCenter">
        @Action!.Name
    </div>

    @if (TypedAction.Url.IsDefined())
{
    <MudIconButton Icon="@Icons.Material.TwoTone.Link" Color="Color.Primary"
                       OnClick="@(() => LoadTemplateUrlAsyncCommand())" />
}
</MudStack>