@page "/"
@layout MainLayout
@using MudBlazor
@inherits HomeViewModel

<div style="width:100%; height: 100%; display: grid; grid-template-columns: auto 1fr; grid-template-rows: auto 1fr; padding: 25px;">
    <MudText Typo="Typo.h4" Style="grid-column: 1 / span 2; grid-row: 1;"><a href="/Emporium">Emporium</a></MudText>

    @if(IsGeneratingData)
    {
        <div style="grid-row: 2; grid-column: 1 / span 2; height: 100%;">
                <div style="display: grid; grid-template-columns: 1fr auto 1fr; grid-template-rows: 1fr auto 1fr; height: 100%;">
                    <MudStack Style="grid-row: 2; grid-column: 2;">
                        <MudProgressCircular Color="Color.Primary" Style="height:125px; width:125px; margin-left: auto; margin-right: auto;" Indeterminate="true" />
                        <MudText Typo="Typo.h5" Align="Align.Center">Generating Data</MudText>
                    </MudStack>
                </div>
            </div>
    }
    else
    {
        <MudPaper Style="grid-column: 1; grid-row: 2; width: 250px;" Outlined="true"
                      Elevation="5">
                <MudStack>
                    <MudText Style="margin-left: auto; margin-right: auto; margin-top: 15px;" Typo="Typo.h6">Categories</MudText>


                </MudStack>
            </MudPaper>

    
            <MudPaper Style="grid-column: 2; grid-row: 2;"
                      Elevation="5" Outlined="true"></MudPaper>
    }
</div>